<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup Condition="('$(PlatformTarget)' == 'x86' Or '$(PlatformTarget)' == 'x64') And '$(TargetPlatformIdentifier)' == 'Windows' And ('$(RuntimeIdentifier)' == '' Or $(RuntimeIdentifier.StartsWith('win')))">
        <Content Include="$(MSBuildThisFileDirectory)..\runtimes\win-$(PlatformTarget)\native\enet.dll">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <Link>enet.dll</Link>
            <Visible>false</Visible>
        </Content>
    </ItemGroup>
    <ItemGroup Condition="'$(PlatformTarget)' == 'x64' And '$(TargetPlatformIdentifier)' == 'Windows' And ('$(RuntimeIdentifier)' == '' Or $(RuntimeIdentifier.StartsWith('win')))">
        <!-- Always copy Linux and OSX native libraries for Mono support. Windows libraries should be determined by RuntimeIdentifier. -->
        <Content Include="$(MSBuildThisFileDirectory)..\runtimes\osx-x64\native\enet.dylib">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <Link>enet.dylib</Link>
          <Visible>false</Visible>
        </Content>
        <Content Include="$(MSBuildThisFileDirectory)..\runtimes\linux-x64\native\libenet.so">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <Link>libenet.so</Link>
          <Visible>false</Visible>
        </Content>
    </ItemGroup>
</Project>